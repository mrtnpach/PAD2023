@using StoreServiceReference
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Categorias";
}

<section>
    <div class="container py-4">
        <h4>Componentes</h4>
            <article class="row justify-content-center img-fluid object-fit-cover">
            @foreach (var product in Model.Where(p => p.Category == ProductCategory.Components).Take(4))
            {
                <div class="col-12 col-md-6 col-lg-3 mb-3">
                    <div class="card h-100">
                        <img src="@product.MainImageUrl" class="card-img-top categoriesImg" alt="@product.ShortDescription"/>
                        <div class="card-body text-light d-flex flex-column">
                            <h5 class="card-title text-center">@product.Name</h5>
                            <p class="card-text">
                            <p>@product.Description</p>
                            <div class="mt-auto">
                                <div>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id=@product.Id asp-route-name=@product.Name class="btn w-100 boton3 mb-1">Ver más</a>
                                </div>
                                <div>
                                    <a asp-controller="Home" asp-action="Error" class="btn w-100 boton3 mb-1">Añadir al carrito</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </article>
    </div>
