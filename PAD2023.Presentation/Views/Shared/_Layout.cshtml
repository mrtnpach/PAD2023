<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InnovaTech</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Bebas+Neue&family=Noto+Sans+Old+Permic&family=Poppins:wght@100;200;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/InnovaTech.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container nav-container ">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logoNavbar.png" alt="logoNavbar">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse mt-0" id="navbarSupportedContent">
                    <form class="d-flex ms-auto" role="search">
                        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link navText" aria-current="page" asp-controller="Categorias" asp-action="Index">Categorías</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link navText" asp-controller="Nosotros" asp-action="Index">Nosotros</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link navText" asp-controller="Contacto" asp-action="Index">Contacto</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link navText dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-circle-user"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="Register">Crear Cuenta</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="Index">Login</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navText" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-3 mt-3">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-12 col-lg-3 text-center">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/icono-3-removebg-preview.png" alt="logo del sitio" class="img-fluid" />
                    </a>
                </div>
                <div class="col-md-4 col-lg-3 text-center">
                    <h5>Formas de Pago</h5>
                    <img src="~/img/formas-pago-3.png" class="img-fluid"/>
                </div>
                <div class="col-md-4 col-lg-3 text-center">
                    <h5>Envios a todo el País</h5>
                    <img src="~/img/forma-envio.png" class="img-fluid" />
                </div>
                <div class="col-md-4 col-lg-3  text-center">
                    <h5>Seguinos en nuestras redes</h5>
                    <a href="./pages/error404.html" class="Footer__li--decoretion">
                        <i class="bi bi-instagram fs-4"></i>
                    </a>
                    <a href="./pages/error404.html" class="Footer__li--decoretion mx-3">
                        <i class="bi bi-facebook fs-4"></i>
                    </a>
                    <a href="./pages/error404.html" class="Footer__li--decoretion">
                        <i class="bi bi-twitter-x fs-4"></i>
                    </a>
                    <a href="./pages/error404.html" class="Footer__li--decoretion mx-3">
                        <i class="bi bi-youtube fs-4"></i>
                    </a>
                    <a href="./pages/error404.html" class="Footer__li--decoretion"><i class="bi bi-tiktok fs-4"></i></a>
                </div>
                <div class="col-md-12 col-lg-12 text-center py-1">
                    <p>&copy; Todos los derechos reservados</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/82dcc82885.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
