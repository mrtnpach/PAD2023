@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <h1 class="text-center text-md-start">Carrito de Compras</h1>
    <section class="d-flex flex-column gap-5">
        <div class="d-flex flex-column flex-lg-row gap-2 gap-md-5 justify-content-center section--cart__products">
            <div class="text-center">
                <h3>Unidades</h3>
                <h5>4</h5>
            </div>
            <div class="text-center">
                <h3>Precio</h3>
                <h5>$698.500</h5>
            </div>
            <div class="text-center">
                <h3>Imagen</h3>
                <img src="https://imagenes.compragamer.com/productos/compragamer_Imganen_general_36806_Notebook_Gamer_Asus_TUF_FX506L_FHD_IPS_15.6__Core_I5_10300H_16GB_512GB_SSD_NVMe_GTX_1650_W11_Home_144Hz_d66354a0-grn.jpg" alt="Notebook Gamer Asus TUF FX506L" height="150" />
            </div>
            <div class="text-center">
                <h3>Nombre</h3>
                <h5>Notebook Gamer Asus TUF FX506L</h5>
            </div>
            <div class="text-center">
                <h3>Precio final</h3>
                <h5>$2.794.000</h5>
            </div>
            <div class="d-flex flex-column justify-content-center gap-3">
                <a asp-controller="Home" asp-action="Error" class="btn btn-primary">Finalizar compra</a>
                <a asp-controller="Home" asp-action="Error" class="btn btn-danger">Eliminar Articulo</a>
            </div>
        </div>
        <div class="d-flex flex-column flex-lg-row gap-2 gap-md-5 justify-content-center section--cart__products">
            <div class="text-center">
                <h3>Unidades</h3>
                <h5>2</h5>
            </div>
            <div class="text-center">
                <h3>Precio</h3>
                <h5>$16.650</h5>
            </div>
            <div class="text-center">
                <h3>Imagen</h3>
                <img src="https://imagenes.compragamer.com/productos/compragamer_Imganen_general_8854_Auriculares_Redragon_Scylla_H901_PC___PS4___Switch___XBOX_d52354ae-grn.jpg" alt="Auriculares Redragon Scylla H901" height="150" />
            </div>
            <div class="text-center">
                <h3>Nombre</h3>
                <h5>Auriculares Redragon Scylla H901</h5>
            </div>
            <div class="text-center">
                <h3>Precio final</h3>
                <h5>$33.300</h5>
            </div>
            <div class="d-flex flex-column justify-content-center gap-3">
                <a asp-controller="Home" asp-action="Error" class="btn btn-primary">Finalizar compra</a>
                <a asp-controller="Home" asp-action="Error" class="btn btn-danger">Eliminar Articulo</a>
            </div>
        </div>
        <div class="d-flex justify-content-center flex-column flex-md-row gap-3">
            <a asp-controller="Home" asp-action="Error" class="btn btn-danger">Vaciar carrito</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al inicio</a>
            <a asp-controller="Home" asp-action="Error" class="btn btn-primary">Comprar todo</a>
        </div>
    </section>
</div>
