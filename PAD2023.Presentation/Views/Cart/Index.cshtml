@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <h1 class="text-center text-md-start">Carrito de Compras</h1>
    <section class="d-flex flex-column gap-5">
        <div class="d-flex flex-column flex-lg-row gap-2 gap-md-5 justify-content-center section--cart__products">
            <div class="text-center">
                <h3>Unidades</h3>
                <h5>4</h5>
            </div>
            <div class="text-center">
                <h3>Precio</h3>
                <h5>$13.500</h5>
            </div>
            <div class="text-center">
                <h3>Imagen</h3>
                <img src="~/img/notebook2.jpg" alt="NotebookQuantumBookPro" height="150" />
            </div>
            <div class="text-center">
                <h3>Nombre</h3>
                <h5>Notebook QuantumBook Pro</h5>
            </div>
            <div class="text-center">
                <h3>Precio final</h3>
                <h5>$54.000</h5>
            </div>
            <div class="d-flex flex-column justify-content-center gap-3">
                <a href="../pages/error404.html" class="btn btn-primary">Finalizar compra</a>
                <a href="../pages/error404.html" class="btn btn-danger">Eliminar Articulo</a>
            </div>
        </div>
        <div class="d-flex flex-column flex-lg-row gap-2 gap-md-5 justify-content-center section--cart__products">
            <div class="text-center">
                <h3>Unidades</h3>
                <h5>2</h5>
            </div>
            <div class="text-center">
                <h3>Precio</h3>
                <h5>$50000</h5>
            </div>
            <div class="text-center">
                <h3>Imagen</h3>
                <img src="~/img/pc2.jpg" alt="PcArmada" height="150" />
            </div>
            <div class="text-center">
                <h3>Nombre</h3>
                <h5>Pc Armada HyperTech A5600</h5>
            </div>
            <div class="text-center">
                <h3>Precio final</h3>
                <h5>$100.000</h5>
            </div>
            <div class="d-flex flex-column justify-content-center gap-3">
                <a href="../pages/error404.html" class="btn btn-primary">Finalizar compra</a>
                <a href="../pages/error404.html" class="btn btn-danger">Eliminar Articulo</a>
            </div>
        </div>
        <div class="d-flex justify-content-center flex-column flex-md-row gap-3">
            <a href="../pages/error404.html" class="btn btn-danger">Vaciar carrito</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al inicio</a>
            <a href="../pages/error404.html" class="btn btn-primary"> Comprar todo</a>
        </div>
    </section>
</div>
